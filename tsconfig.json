{
    "compilerOptions": {
        "target": "es6",
        "types": ["2gl"],
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": ["dom", "es6"],
        "sourceMap": true,
        "strict": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importsNotUsedAsValues": "preserve",
        "declaration": true,
        "outDir": "dist/module"
    },
    "include": ["src/**/*"]
}
